<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/vinyl_cover1"
        android:layout_width="411dp"
        android:layout_height="650dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/scrapmetal_1" />

<!--    메뉴바-->


    <ImageView
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:src="@drawable/nav_bar" />

    <Button
        android:id="@+id/homeIcon"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="642dp"
        android:background="#00ff0000"
        android:drawableBottom="@drawable/home_icon" />

    <Button
        android:id="@+id/myIcon"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="642dp"
        android:background="#00ff0000"
        android:drawableBottom="@drawable/my_icon" />
<!--    -->

    <Button
        android:id="@+id/paperIcon"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:background="#00ff0000"
        android:drawableBottom="@drawable/paper_icon" />

    <Button
        android:id="@+id/plasticIcon"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        android:background="#00ff0000"
        android:drawableBottom="@drawable/plastic_icon" />

    <Button
        android:id="@+id/vinylIcon"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="0dp"
        android:background="#00ff0000"
        android:drawableBottom="@drawable/vinyl_icon" />

    <Button
        android:id="@+id/glassIcon"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="0dp"
        android:background="#00ff0000"
        android:drawableBottom="@drawable/glass_icon" />

    <Button
        android:id="@+id/scapmetalIcon"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="0dp"
        android:background="#00ff0000"
        android:drawableBottom="@drawable/scrapmetal_icon" />




</RelativeLayout>